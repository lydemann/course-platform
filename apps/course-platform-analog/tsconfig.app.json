{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [],
    "target": "ESNext",
    "useDefineForClassFields": false,
    "experimentalDecorators": true
  },
  "files": ["src/main.ts", "src/main.server.ts"],
  "include": [
    "src/**/*.d.ts",
    "src/app/routes/**/*.ts",
    "src/app/pages/**/*.page.ts"
  ],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
