{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["vite/client"],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "files": ["src/main.ts", "src/main.server.ts"],
  "include": [
    "src/**/*.d.ts",
    "src/app/pages/**/*.page.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
