{
  "rulesDirectory": [
    "node_modules/@nrwl/workspace/src/tslint",
    "node_modules/codelyzer"
  ],
  "linterOptions": {
    "exclude": ["**/*"]
  },
  "rules": {
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "deprecation": {
      "severity": "warn"
    },
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-over-type-literal": true,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "ordered-imports": [
			true,
			{
				"grouped-imports": true,
				"groups": [
					{
						"name": "shared_libraries",
						"match": "^@course-platform",
						"order": 20
					},
					{
						"name": "course_client_app",
						"match": "^@course-client",
						"order": 20
					},
					{
						"name": "course_admin_app",
						"match": "^@course-admin",
						"order": 20
					},
					{
						"name": "relative_paths",
						"match": "^[.][.]?",
						"order": 20
					},
					{
						"name": "scoped_paths",
						"match": "^@",
						"order": 10
					},
					{
						"name": "absolute_paths",
						"match": "^[a-zA-Z]",
						"order": 10
					},
					{
						"match": null,
						"order": 10
					}
				]
			}
		],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "prefer-const": true,
    "radix": true,
    "triple-equals": [true, "allow-null-check"],
    "unified-signatures": true,
    "variable-name": false,
    "nx-enforce-module-boundaries": [
      true,
      {
        "enforceBuildableLibDependency": true,
        "allow": [],
        "depConstraints": [
          {
            "sourceTag": "scope:shared",
            "onlyDependOnLibsWithTags": ["scope:shared"]
          },
          {
            "sourceTag": "scope:course-client",
            "onlyDependOnLibsWithTags": ["scope:course-client", "scope:shared"]
          },
          {
            "sourceTag": "scope:course-admin",
            "onlyDependOnLibsWithTags": ["scope:course-admin", "scope:shared"]
          },
          {
            "sourceTag": "scope:course-service",
            "onlyDependOnLibsWithTags": ["scope:course-client", "scope:shared"]
          },
          {
            "sourceTag": "type:util",
            "onlyDependOnLibsWithTags": ["type:util"]
          },
          {
            "sourceTag": "type:feat",
            "onlyDependOnLibsWithTags": ["type:shared"]
          },
          {
            "sourceTag": "type:ui",
            "onlyDependOnLibsWithTags": [
              "type:ui",
              "type:interface",
              "type:util"
            ]
          },
          {
            "sourceTag": "type:data-access",
            "onlyDependOnLibsWithTags": [
              "type:data-access",
              "type:util",
              "type:interface",
              "type:feat"
            ]
          },
          {
            "sourceTag": "type:e2e",
            "onlyDependOnLibsWithTags": ["type:e2e"]
          }
        ]
      }
    ],
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "kebab-case"],
    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true
  }
}
