{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@course-platform/course-admin-lib": [
        "libs/course-admin-lib/src/index.ts"
      ],
      "@course-platform/course-client-env": [
        "libs/course-client-lib/src/environments/environment.ts"
      ],
      "@course-platform/course-client-lib": [
        "libs/course-client-lib/src/index.ts"
      ],
      "@course-platform/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@course-platform/shared/feat-auth": [
        "libs/shared/feat-auth/src/index.ts"
      ],
      "@course-platform/shared/interfaces": [
        "libs/shared/interfaces/src/index.ts"
      ],
      "@course-platform/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@course-platform/shared/util": ["libs/shared/util/index.ts"],
      "@course-platform/shared/util/util-feature-toggle": [
        "libs/shared/util/util-feature-toggle/src/index.ts"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
